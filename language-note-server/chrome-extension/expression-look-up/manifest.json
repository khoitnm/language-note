{
    "name": "Language Note - Expression Look Up",
    "description": "Quickly adding expression into our topics",
    "version": "0.0",
    "icons": {
        "128": "context-menu/browser-action/images/agenda.png"
    },
    "permissions": [
        "cookies",
        "sessions",
        "tabs",
        "contextMenus",
        "http://*/",
        "https://*/"
    ],
    "browser_action": {
        "default_popup": "context-menu/browser-action/popup.html"
    },
    "background": {
        "scripts": [
            "common/jscommon.js",
            "context-menu/background/menu-creation.js"
        ],
        "persistence": false
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "css":["context-menu/content/context-menu.css"],
            "js": [
                "lib/jquery.min.js",
                "context-menu/content/modal.js",
                "context-menu/content/context-menu.js"
            ],
            "run_at":"document_end"
        }
    ],
    "web_accessible_resources": [
        "lib/jquery.min.js",
        "context-menu/content/modal.js",
        "context-menu/content/context-menu.css",
        "context-menu/content/modal.html"
    ],
    "manifest_version": 2
}